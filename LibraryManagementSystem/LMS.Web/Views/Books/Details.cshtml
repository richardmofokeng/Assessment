@model LMS.Model.BookModel
@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div class="mb-3">
    <strong>Title:</strong> @Model.Title
</div>
<div class="mb-3">
    <strong>Author:</strong> @Model.Author
</div>
<div class="mb-3">
    <strong>ISBN:</strong> @Model.ISBN
</div>
<div class="mb-3">
    <strong>Publication Year:</strong> @Model.PublicationYear
</div>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>
